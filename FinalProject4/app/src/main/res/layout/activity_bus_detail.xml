<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BusDetailActivity">

    <TextView
        android:id="@+id/bat"
        android:text="Book a trip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgbus"
        android:layout_below="@+id/bat"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/img_1"
        android:scaleType="fitXY"
        android:layout_width="350dp"
        android:layout_height="200dp"/>
    <TableLayout
        android:id="@+id/tbl1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="295dp"
        android:layout_width="350dp"
        android:layout_height="39dp">
        <TableRow>
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="225dp"
                android:layout_height="30dp"
                app:cardCornerRadius="10dp">
                <TextView
                    android:text="Sempati Star"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_baseline_star_24"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="9/10"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="10dp"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/btnsee"
        android:text="See Picture"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="@color/white2"
        android:layout_marginLeft="260dp"
        android:textSize="10dp"
        android:layout_marginTop="285dp"
        android:layout_width="110dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/date"
        android:layout_below="@id/tbl1"
        android:layout_marginTop="25dp"
        android:text="Friday, 23 Jul 2019"
        android:fontFamily="@font/lato"
        android:textSize="10dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:backgroundTint="@color/white"
        android:layout_below="@id/date"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"
        android:layout_width="350dp"
        android:layout_height="150dp">
        <TextView
            android:text="MEDAN"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/purple_200"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="17:35"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Date"
            android:fontFamily="@font/lato"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="23 Jul 2019"
            android:fontFamily="@font/lato"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginTop="105dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="PEKANBARU"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/purple_200"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="265dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="09:10"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="315dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Bus No."
            android:fontFamily="@font/lato"
            android:layout_marginLeft="320dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="P 1208 NN"
            android:fontFamily="@font/lato"
            android:layout_marginLeft="305dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginTop="105dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="13h 45m"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="145dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/img_2"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="47dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="43dp"
            android:src="@drawable/img_3" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="43dp"
            android:src="@drawable/img_3" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_below="@id/tbl1"
        android:layout_marginLeft="360dp"
        android:backgroundTint="@color/yellow_700"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="23dp"
        android:layout_width="30dp"
        android:layout_height="30dp">
        <TextView
            android:text="+1d"
            android:fontFamily="@font/lato"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TableLayout
        android:id="@+id/tbl2"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/cv1"
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="Available seat"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="24 Seat are available"
                android:textSize="13dp"
                android:layout_marginLeft="15dp"/>
            <TableRow>
                <TextView
                    android:layout_marginLeft="75dp"
                    android:textSize="13dp"
                    android:text="2 x 2 Seats arrangement"/>
            </TableRow>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Class"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>
        </TableRow>
    </TableLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv3"
        android:layout_below="@id/tbl2"
        android:backgroundTint="@color/white"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="2 x 166.000,00"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Rp332.000,00"
            android:textColor="@color/purple_200"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="33dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnBookNow"
            android:text="book now"
            android:textColor="@color/white2"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="275dp"
            android:layout_height="60dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>