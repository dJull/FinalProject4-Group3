<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardPayment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="#F4F4F4"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_marginTop="32dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Payment"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#3D3D3D"/>

            <ImageView
                android:id="@+id/qrqode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginTop="32dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="18dp"
            android:text="Total Payment"
            android:textAlignment="textStart"
            android:textColor="#585858"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/john"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:drawableLeft="@drawable/purple_line"
            android:drawablePadding="18dp"
            android:text="Rp332.333,00"
            android:textAlignment="textStart"
            android:textColor="#8749F2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="9dp"
            android:text="Card number"
            android:textAlignment="textStart"
            android:textColor="#585858"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/outline_edittext"
            android:drawableLeft="@drawable/visa"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="20dp"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="9dp"
            android:text="Valid until"
            android:textAlignment="textStart"
            android:textColor="#585858"
            android:textStyle="bold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/username1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@color/white"
                android:padding="20dp"
                android:textColor="#808080"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/username2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@color/white"
                android:padding="20dp"
                android:textColor="#808080"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="9dp"
            android:text="Card holder"
            android:textAlignment="textStart"
            android:textColor="#585858"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/username3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            android:background="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="20dp"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/vcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="9dp"
            android:text="VCC"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="#585858"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/username4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@color/white"
                android:padding="20dp"
                android:textColor="#808080"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:text="Last three digit on your card"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="#ADADAD"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:enabled="false"
            android:text="VERIFY PAYMENT"
            android:background="#693BB8"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>