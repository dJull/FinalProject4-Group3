<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/illust"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/illust_login"/>

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/textWelcome"
        android:layout_below="@id/illust"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Welcome !"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textCaption"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textWelcome"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito_sans_light"
        android:text="Bux is a online booking service for Bus transportation. login now to user Bux services."
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@id/textCaption"
        android:layout_centerInParent="true"
        android:layout_marginTop="95dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/google_logo"
        android:fontFamily="@font/lato"
        android:text="Sign up with Google"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14dp" />


</RelativeLayout>