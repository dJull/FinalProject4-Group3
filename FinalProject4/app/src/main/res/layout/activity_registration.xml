<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

        <TextView
            android:id="@+id/text1"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Almost there"
            android:textAlignment="textStart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="325dp"
            android:layout_height="80dp"
            android:id="@+id/textCaptionRegist"
            android:text="Fill your phone number below, so we can easily catch you up."
            android:fontFamily="@font/lato"
            android:textAlignment="textStart"
            android:layout_below="@id/text1"
            android:layout_centerHorizontal="true"
            android:textSize="14dp"/>
        <ImageView
            android:layout_width="325dp"
            android:layout_height="300dp"
            android:id="@+id/logoRegist"
            android:src="@drawable/regist_illust"
            android:layout_below="@id/textCaptionRegist"
            android:layout_centerHorizontal="true"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/textInputPhoneLayout"
            android:hint="Input your phone number"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logoRegist"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:id="@+id/textInputPhoneEdit"
                android:inputType="number"
                android:fontFamily="@font/nunito_extrabold"
                android:textStyle="bold"
                android:drawableStart="@drawable/phone_logo"
                android:drawablePadding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/btnRegistration"
            android:layout_below="@id/textInputPhoneLayout"
            android:text="SAVE NUMBER"/>


</RelativeLayout>