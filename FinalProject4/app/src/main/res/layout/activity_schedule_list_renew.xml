<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ScheduleListRenew">

    <ImageView
        android:id="@+id/img1"
        android:src="@drawable/logo_splash"
        android:layout_centerHorizontal="true"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd1"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="19dp"
        android:layout_width="170dp"
        android:layout_height="50dp">
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:text="Departure"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Medan"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd2"
        android:layout_toRightOf="@id/cd1"
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="170dp"
        android:layout_height="50dp">
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:text="Arrival"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Pekanbaru"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd3"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/cd1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="19dp"
        android:layout_width="120dp"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/lato"
            android:layout_marginTop="3dp"
            android:text="Fri,23 Jul 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd4"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/cd1"
        android:layout_toRightOf="@id/cd3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="60dp"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="11dp"
            android:fontFamily="@font/lato"
            android:text="Seat 2"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd5"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/cd1"
        android:layout_toRightOf="@id/cd4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="150dp"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="11dp"
            android:fontFamily="@font/lato"
            android:layout_marginTop="3dp"
            android:textColor="@color/purple_200"
            android:text="Sort by Best experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd6"
        android:layout_below="@id/cd5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_width="360dp"
        android:layout_height="170dp">
        <TextView
            android:text="Sempati Star"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="P 1923 NM"
            android:fontFamily="@font/lato"
            android:textSize="11dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/view"
            android:layout_marginTop="40dp"
            android:layout_marginStart="1dp"
            android:layout_width="7dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="17:35"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Terminal Amplas Medan"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/lato"
            android:layout_width="110dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="09:10"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Terminal Bandaraya Riau"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/lato"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="310dp"
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                app:cardBackgroundColor="@color/yellow_700"
                android:layout_height="40dp">
                <ImageView
                    android:src="@drawable/ic_baseline_star_24"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <TextView
                    android:text="4.9/5"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginTop="13dp"
                    android:textSize="13dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="14dp"
                android:text="120"
                android:fontFamily="@font/lato"
                android:textSize="11dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Reviews"
                android:fontFamily="@font/lato"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd7"
        android:layout_below="@id/cd6"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="3dp"
        android:layout_width="360dp"
        android:layout_height="65dp">
        <TextView
            android:text="@string/harga"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="23dp"
            android:textStyle="bold"
            android:text="/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn1"
        android:layout_below="@id/cd6"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="10dp"
        android:text="Book now"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd8"
        android:layout_below="@id/cd7"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_marginLeft="13dp"
        android:layout_width="360dp"
        android:layout_height="170dp">
        <TextView
            android:text="Pahala Kencana"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="P 1923 NM"
            android:fontFamily="@font/lato"
            android:textSize="11dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="135dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="02:30"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Terminal Amplas Medan"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/lato"
            android:layout_width="110dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="05:20"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Terminal Bandaraya Riau"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/lato"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="310dp"
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_height="40dp">
                <TextView
                    android:text="4/5"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginTop="13dp"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="14dp"
                android:text="120"
                android:fontFamily="@font/lato"
                android:textSize="11dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Reviews"
                android:fontFamily="@font/lato"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd9"
        android:layout_below="@id/cd8"
        android:layout_marginLeft="13dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_marginTop="1dp"
        android:layout_width="360dp"
        android:layout_height="65dp">
        <TextView
            android:text="@string/harga2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:fontFamily="@font/nunito_extrabold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="23dp"
            android:textStyle="bold"
            android:text="/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginLeft="260dp"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="10dp"
            android:text="Sold Out"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>