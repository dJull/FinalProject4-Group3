<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:background="#F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/text_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Ticket Detail"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#3D3D3D"/>

        <ImageView
            android:id="@+id/qrqode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/ic_baseline_qr_code_24"
            android:layout_marginTop="32dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="95dp"
        android:background="#F4F4F4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/purple_background"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="textStart"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:text="23 JUL 2019. 17:35"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="23dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:text="Book No. 230719-0001"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="18dp"
                        android:text="Name"
                        android:textAlignment="textStart"
                        android:textColor="#D8D8D8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/john"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:drawableLeft="@drawable/purple_line"
                        android:drawablePadding="18dp"
                        android:text="John Doe, 24"
                        android:textAlignment="textStart"
                        android:textColor="#585858"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/dialog_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/yellow_background"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/star"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:drawableLeft="@drawable/ic_baseline_star_24"
                            android:textAlignment="textStart"
                            android:textColor="#8C6F12"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/angka"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.6"
                            android:layout_marginBottom="18dp"
                            android:drawablePadding="18dp"
                            android:text="5/5"
                            android:textAlignment="center"
                            android:textColor="#8C6F12"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:elevation="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="18dp"
                        android:text="Phone Number"
                        android:textAlignment="textStart"
                        android:textColor="#D8D8D8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="23dp"
                        android:text="08123990823"
                        android:textAlignment="textStart"
                        android:textColor="#ADADAD"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="18dp"
                        android:text="Seats"
                        android:textAlignment="textStart"
                        android:textColor="#D8D8D8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="23dp"
                        android:text="2"
                        android:textAlignment="textStart"
                        android:textColor="#ADADAD"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ticketstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="18dp"
                        android:text="Ticket Issued"
                        android:textAlignment="textStart"
                        android:textColor="#D8D8D8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/issued"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="23dp"
                        android:text="Issued"
                        android:textAlignment="textStart"
                        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                        android:drawablePadding="10dp"
                        android:textColor="#61CA5F"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rounded"
            android:orientation="horizontal"
            android:elevation="6dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/poname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="18dp"
                    android:text="PO Name"
                    android:textAlignment="textStart"
                    android:textColor="#D8D8D8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sempatistar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:drawableLeft="@drawable/yellow_line"
                    android:drawablePadding="18dp"
                    android:text="Sempati Star"
                    android:textAlignment="textStart"
                    android:textColor="#585858"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/busno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="18dp"
                    android:text="Bus no."
                    android:textAlignment="textStart"
                    android:textColor="#D8D8D8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/p9123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginStart="23dp"
                    android:text="P 9123 NN"
                    android:textAlignment="textStart"
                    android:textColor="#9A9A9A"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="18dp"
                    android:text="Schedule"
                    android:textAlignment="textStart"
                    android:textColor="#D8D8D8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/jam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginStart="23dp"
                    android:text="17:35"
                    android:textAlignment="textStart"
                    android:textColor="#585858"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/medan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:text="MEDAN"
                    android:textColor="#585858"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/terminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminal Amplas"
                    android:textColor="#D8D8D8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tanggal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="23 Jul 2019"
                    android:textColor="#808080"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeestimated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="18dp"
                    android:text="Estimated time"
                    android:textAlignment="textStart"
                    android:textColor="#D8D8D8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/jam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginStart="23dp"
                    android:text="13h45m"
                    android:textAlignment="textStart"
                    android:textColor="#585858"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jam3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="23dp"
                    android:text="09:10"
                    android:textAlignment="textStart"
                    android:textColor="#585858"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pekanbaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="PEKANBARU"
                    android:textColor="#585858"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/terminal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminal Bandaraya"
                    android:textColor="#D8D8D8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tanggal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="24 Jul 2019"
                    android:textColor="#808080"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seatno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="Seat no."
                    android:textColor="#D8D8D8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/jam4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="9, 10"
                    android:textColor="#585858"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F4F4F4"
            android:elevation="6dp">

            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="textStart"
                android:layout_marginStart="23dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:textSize="18sp"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="#808080"/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginEnd="23dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:textSize="18sp"
                android:text="Rp332.333,00"
                android:textStyle="bold"
                android:textColor="#808080"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>