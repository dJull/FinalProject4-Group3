<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">
    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="143dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="Your tickets"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#3D3D3D"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="95dp"
        android:background="#F4F4F4">

        <LinearLayout
            android:id="@+id/detailtiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/purple_background"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="textStart"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:text="23 JUL 2019. 17:35"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="23dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:text="Book No. 230719-0001"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:id="@+id/sempati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"
                    android:text="Sempati Star"
                    android:textStyle="bold"
                    android:textColor="#8749F2"/>

                <TextView
                    android:id="@+id/p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"
                    android:text="P 1923 NM"
                    android:textColor="#ADADAD"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:id="@+id/jam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAlignment="textStart"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="18dp"
                    android:textSize="18sp"
                    android:text="02:30"
                    android:textStyle="bold"
                    android:textColor="#585858"/>

                <TextView
                    android:id="@+id/lokasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textAlignment="textStart"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="18dp"
                    android:textSize="14sp"
                    android:text="Terminal Amplas Medan"
                    android:textColor="#ADADAD"/>

                <TextView
                    android:id="@+id/paid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textAlignment="textStart"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="18dp"
                    android:textSize="16sp"
                    android:text="Paid"
                    android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:textColor="#61CA5F"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>